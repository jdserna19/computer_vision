import cv2

# El orden de los canales es: BGR
im = cv2.imread('cat.jpg')

green = im[:,:,1]

    # Mostrar el canal verde
cv2.imshow('Canal Verde', green)

cv2.waitKey(0)

cv2.destroyAllWindows()

# %%
import cv2
import numpy as np

# Cargar la imagen
image_path = 'cat.jpg'
im = cv2.imread(image_path)


    # Convertir la imagen a espacio de color HSV
hsv = cv2.cvtColor(im, cv2.COLOR_BGR2HSV)

    # Definir el rango de colores para el fondo verde
lower_green = np.array([35, 100, 100])
upper_green = np.array([85, 255, 255])

    # Crear una máscara para el fondo verde
mask = cv2.inRange(hsv, lower_green, upper_green)

    # Invertir la máscara para obtener el objeto (el gato)
mask_inv = cv2.bitwise_not(mask)

    # Crear una imagen de fondo del nuevo color (por ejemplo, azul)
new_background_color = [255, 0, 0]  # BGR para azul
background = np.full_like(im, new_background_color)

    # Aplicar la máscara para extraer el fondo y el objeto
background_masked = cv2.bitwise_and(background, background, mask=mask)
object_masked = cv2.bitwise_and(im, im, mask=mask_inv)

    # Combinar el objeto con el nuevo fondo
final_image = cv2.add(background_masked, object_masked)

    # Mostrar la imagen con el nuevo fondo
cv2.imshow('Imagen con Nuevo Fondo', final_image)

    # Esperar a que se presione una tecla
cv2.waitKey(0)

    # Cerrar todas las ventanas
cv2.destroyAllWindows()

    # Guardar la imagen resultante
cv2.imwrite('cat_with_new_background.jpg', final_image)

# %%
